@page "/providers"
@inject ProviderService ProviderService

<PageTitle>Providers - ChildCare Connect</PageTitle>

<div class="space-y-6">
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-gray-900" style="font-family: 'Nunito', sans-serif;">Care Providers</h1>
            <p class="text-gray-500 mt-1">Network of verified child care facilities.</p>
        </div>
    </div>

    <div class="bg-white rounded-xl shadow-sm border border-gray-200">
        <div class="p-4 border-b border-gray-200">
            <input type="text" 
                   placeholder="Search providers..." 
                   class="w-full max-w-md px-4 py-2 border border-gray-200 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent"
                   @bind="searchQuery"
                   @bind:event="oninput" />
        </div>

        @if (providers.Count == 0)
        {
            <div class="p-12 text-center text-gray-500">
                <p>No providers found.</p>
            </div>
        }
        else
        {
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Provider</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Capacity</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Location</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Rating</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        @foreach (var provider in FilteredProviders)
                        {
                            <tr class="hover:bg-gray-50 cursor-pointer">
                                <td class="px-6 py-4">
                                    <div class="flex items-center gap-3">
                                        <div class="w-10 h-10 rounded-lg @GetTypeBgClass(provider.Type) flex items-center justify-center">
                                            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                                            </svg>
                                        </div>
                                        <div>
                                            <p class="font-medium text-gray-900">@provider.Name</p>
                                            <p class="text-xs text-gray-400">ID: @provider.Id[..8]</p>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4">
                                    <span class="@GetTypeBadgeClass(provider.Type)">@provider.Type</span>
                                </td>
                                <td class="px-6 py-4 text-gray-500">
                                    <span class="font-medium">@provider.Enrollment</span> / @provider.Capacity
                                </td>
                                <td class="px-6 py-4 text-gray-500">@provider.Location</td>
                                <td class="px-6 py-4">
                                    <div class="flex items-center gap-1">
                                        <svg class="w-4 h-4 text-yellow-400 fill-current" viewBox="0 0 20 20">
                                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                        </svg>
                                        <span class="text-gray-700">@provider.Rating</span>
                                    </div>
                                </td>
                                <td class="px-6 py-4">
                                    <span class="@GetStatusBadgeClass(provider.Status)">@provider.Status</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@code {
    private List<Provider> providers = new();
    private string searchQuery = "";

    private IEnumerable<Provider> FilteredProviders => string.IsNullOrWhiteSpace(searchQuery)
        ? providers
        : providers.Where(p => p.Name.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ||
                               p.Location.Contains(searchQuery, StringComparison.OrdinalIgnoreCase));

    protected override async Task OnInitializedAsync()
    {
        providers = await ProviderService.GetAllProvidersAsync();
    }

    private string GetTypeBgClass(string type)
    {
        return type switch
        {
            "Center" => "bg-blue-500",
            "In-Home" => "bg-green-500",
            "Preschool" => "bg-purple-500",
            _ => "bg-gray-500"
        };
    }

    private string GetTypeBadgeClass(string type)
    {
        var baseClass = "inline-flex px-2 py-1 text-xs font-medium rounded-full ";
        return type switch
        {
            "Center" => baseClass + "bg-blue-100 text-blue-700",
            "In-Home" => baseClass + "bg-green-100 text-green-700",
            "Preschool" => baseClass + "bg-purple-100 text-purple-700",
            _ => baseClass + "bg-gray-100 text-gray-700"
        };
    }

    private string GetStatusBadgeClass(string status)
    {
        var baseClass = "inline-flex px-2 py-1 text-xs font-medium rounded-full ";
        return status switch
        {
            "Verified" => baseClass + "bg-green-100 text-green-700",
            "Pending" => baseClass + "bg-yellow-100 text-yellow-700",
            "Review Needed" => baseClass + "bg-orange-100 text-orange-700",
            _ => baseClass + "bg-gray-100 text-gray-700"
        };
    }
}
