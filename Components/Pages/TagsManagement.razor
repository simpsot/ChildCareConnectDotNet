@page "/tags"
@inject TagService TagService
@inject UserService UserService

<PageTitle>Manage Tags - ChildCare Connect</PageTitle>

<div class="space-y-6">
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-gray-900" style="font-family: 'Nunito', sans-serif;">Manage Tags</h1>
            <p class="text-gray-500 mt-1">Create and manage tags for organizing tasks.</p>
        </div>
        @if (canManageTags)
        {
            <button @onclick="() => OpenTagModal(null)" class="px-4 py-2 bg-teal-600 text-white rounded-lg hover:bg-teal-700 font-medium flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                </svg>
                New Tag
            </button>
        }
    </div>

    @if (!canManageTags)
    {
        <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4 flex items-center gap-3">
            <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
            <p class="text-sm text-yellow-700">Only Admins and Managers can create and edit tags.</p>
        </div>
    }

    @if (isLoading)
    {
        <div class="flex justify-center py-12">
            <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-teal-600"></div>
        </div>
    }
    else if (!tags.Any())
    {
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-12 text-center">
            <svg class="w-16 h-16 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
            </svg>
            <h3 class="text-lg font-medium text-gray-900 mb-2">No tags yet</h3>
            <p class="text-gray-500 mb-4">Create your first tag to start organizing tasks.</p>
            @if (canManageTags)
            {
                <button @onclick="() => OpenTagModal(null)" class="px-4 py-2 bg-teal-600 text-white rounded-lg hover:bg-teal-700 font-medium">
                    Create Tag
                </button>
            }
        </div>
    }
    else
    {
        <div class="bg-white rounded-xl shadow-sm border border-gray-200">
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-gray-50 border-b border-gray-200">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tag</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Color</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created By</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Usage</th>
                            @if (canManageTags)
                            {
                                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                            }
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        @foreach (var tag in tags)
                        {
                            <tr class="hover:bg-gray-50">
                                <td class="px-6 py-4">
                                    <span class="@GetTagClass(tag.Color)">@tag.Name</span>
                                </td>
                                <td class="px-6 py-4">
                                    <div class="flex items-center gap-2">
                                        <div class="w-4 h-4 rounded-full @GetColorBgClass(tag.Color)"></div>
                                        <span class="text-sm text-gray-600 capitalize">@tag.Color</span>
                                    </div>
                                </td>
                                <td class="px-6 py-4 text-sm text-gray-600">
                                    @(tag.CreatedBy?.Name ?? "System")
                                </td>
                                <td class="px-6 py-4 text-sm text-gray-600">
                                    @(tagUsageCounts.GetValueOrDefault(tag.Id, 0)) tasks
                                </td>
                                @if (canManageTags)
                                {
                                    <td class="px-6 py-4 text-right">
                                        <div class="flex justify-end gap-2">
                                            <button @onclick="() => OpenTagModal(tag)" class="p-2 text-gray-400 hover:text-teal-600 hover:bg-teal-50 rounded-lg transition-colors" title="Edit">
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                                </svg>
                                            </button>
                                            <button @onclick="() => DeleteTag(tag)" class="p-2 text-gray-400 hover:text-red-600 hover:bg-red-50 rounded-lg transition-colors" title="Delete">
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                                </svg>
                                            </button>
                                        </div>
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

@if (showModal)
{
    <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50" @onclick="CloseModal">
        <div class="bg-white rounded-xl shadow-xl max-w-md w-full mx-4" @onclick:stopPropagation>
            <div class="p-6 border-b border-gray-200">
                <h2 class="text-xl font-semibold text-gray-900">@(editingTag == null ? "Create Tag" : "Edit Tag")</h2>
            </div>
            <div class="p-6 space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Tag Name *</label>
                    <input type="text" @bind="tagForm.Name" class="w-full px-3 py-2 border border-gray-200 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-teal-500" placeholder="e.g., Urgent, Follow-up" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Color *</label>
                    <div class="grid grid-cols-5 gap-2">
                        @foreach (var color in TagColors.All)
                        {
                            <button type="button" 
                                    @onclick="() => tagForm.Color = color"
                                    class="@($"w-10 h-10 rounded-lg {GetColorBgClass(color)} {(tagForm.Color == color ? "ring-2 ring-offset-2 ring-gray-400" : "hover:opacity-80")}")">
                            </button>
                        }
                    </div>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Preview</label>
                    <span class="@GetTagClass(tagForm.Color)">@(string.IsNullOrEmpty(tagForm.Name) ? "Tag Name" : tagForm.Name)</span>
                </div>
                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="p-3 bg-red-50 border border-red-200 rounded-lg text-sm text-red-700">
                        @errorMessage
                    </div>
                }
            </div>
            <div class="p-6 border-t border-gray-200 flex justify-end gap-3">
                <button @onclick="CloseModal" class="px-4 py-2 border border-gray-200 rounded-lg text-gray-700 hover:bg-gray-50 font-medium">
                    Cancel
                </button>
                <button @onclick="SaveTag" disabled="@isSaving" class="px-4 py-2 bg-teal-600 text-white rounded-lg hover:bg-teal-700 font-medium disabled:opacity-50">
                    @(isSaving ? "Saving..." : (editingTag == null ? "Create Tag" : "Save Changes"))
                </button>
            </div>
        </div>
    </div>
}

@code {
    private List<Tag> tags = new();
    private Dictionary<string, int> tagUsageCounts = new();
    private bool isLoading = true;
    private bool showModal = false;
    private bool isSaving = false;
    private bool canManageTags = false;
    private Tag? editingTag;
    private Tag tagForm = new();
    private string? errorMessage;
    private string? currentUserId;

    protected override async Task OnInitializedAsync()
    {
        var users = await UserService.GetAllUsersAsync();
        var currentUser = users.FirstOrDefault(u => u.Role == "Admin") ?? users.FirstOrDefault();
        currentUserId = currentUser?.Id;
        canManageTags = currentUser?.Role == "Admin" || currentUser?.Role == "Manager";
        
        await LoadTags();
    }

    private async Task LoadTags()
    {
        isLoading = true;
        StateHasChanged();
        
        tags = await TagService.GetAllTagsAsync();
        
        tagUsageCounts.Clear();
        foreach (var tag in tags)
        {
            tagUsageCounts[tag.Id] = await TagService.GetTagUsageCountAsync(tag.Id);
        }
        
        isLoading = false;
        StateHasChanged();
    }

    private void OpenTagModal(Tag? tag)
    {
        editingTag = tag;
        errorMessage = null;
        if (tag != null)
        {
            tagForm = new Tag
            {
                Name = tag.Name,
                Color = tag.Color
            };
        }
        else
        {
            tagForm = new Tag
            {
                Color = "teal"
            };
        }
        showModal = true;
        StateHasChanged();
    }

    private void CloseModal()
    {
        showModal = false;
        editingTag = null;
        errorMessage = null;
        StateHasChanged();
    }

    private async Task SaveTag()
    {
        if (string.IsNullOrWhiteSpace(tagForm.Name))
        {
            errorMessage = "Tag name is required.";
            return;
        }

        isSaving = true;
        errorMessage = null;
        StateHasChanged();

        try
        {
            if (editingTag != null)
            {
                await TagService.UpdateTagAsync(editingTag.Id, tagForm);
            }
            else
            {
                tagForm.CreatedById = currentUserId;
                await TagService.CreateTagAsync(tagForm);
            }
            
            CloseModal();
            await LoadTags();
        }
        catch (InvalidOperationException ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isSaving = false;
            StateHasChanged();
        }
    }

    private async Task DeleteTag(Tag tag)
    {
        var usageCount = tagUsageCounts.GetValueOrDefault(tag.Id, 0);
        if (usageCount > 0)
        {
            return;
        }
        
        await TagService.DeleteTagAsync(tag.Id);
        await LoadTags();
    }

    private string GetTagClass(string color)
    {
        return color switch
        {
            "red" => "px-3 py-1 text-sm font-medium rounded-full bg-red-100 text-red-700",
            "orange" => "px-3 py-1 text-sm font-medium rounded-full bg-orange-100 text-orange-700",
            "yellow" => "px-3 py-1 text-sm font-medium rounded-full bg-yellow-100 text-yellow-700",
            "green" => "px-3 py-1 text-sm font-medium rounded-full bg-green-100 text-green-700",
            "teal" => "px-3 py-1 text-sm font-medium rounded-full bg-teal-100 text-teal-700",
            "blue" => "px-3 py-1 text-sm font-medium rounded-full bg-blue-100 text-blue-700",
            "indigo" => "px-3 py-1 text-sm font-medium rounded-full bg-indigo-100 text-indigo-700",
            "purple" => "px-3 py-1 text-sm font-medium rounded-full bg-purple-100 text-purple-700",
            "pink" => "px-3 py-1 text-sm font-medium rounded-full bg-pink-100 text-pink-700",
            _ => "px-3 py-1 text-sm font-medium rounded-full bg-gray-100 text-gray-700"
        };
    }

    private string GetColorBgClass(string color)
    {
        return color switch
        {
            "red" => "bg-red-500",
            "orange" => "bg-orange-500",
            "yellow" => "bg-yellow-500",
            "green" => "bg-green-500",
            "teal" => "bg-teal-500",
            "blue" => "bg-blue-500",
            "indigo" => "bg-indigo-500",
            "purple" => "bg-purple-500",
            "pink" => "bg-pink-500",
            _ => "bg-gray-500"
        };
    }
}
