@inject NavigationManager Navigation

<aside class="fixed left-0 top-0 h-full w-64 bg-white border-r border-gray-200 flex flex-col">
    <div class="h-16 flex items-center px-6 border-b border-gray-200">
        <div class="flex items-center gap-3">
            <div class="w-8 h-8 rounded-lg bg-gradient-to-br from-teal-500 to-teal-600 flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                </svg>
            </div>
            <span class="font-bold text-lg text-gray-900" style="font-family: 'Nunito', sans-serif;">ChildCare Connect</span>
        </div>
    </div>

    <nav class="flex-1 py-4 px-3 space-y-1">
        <NavLink href="/" class="@GetNavClass("/")" Match="NavLinkMatch.All">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
            </svg>
            <span>Dashboard</span>
        </NavLink>

        <NavLink href="/team" class="@GetNavClass("/team")">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
            <span>Team</span>
        </NavLink>

        <NavLink href="/clients" class="@GetNavClass("/clients")">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
            <span>Clients</span>
        </NavLink>

        <NavLink href="/clients/new" class="@GetNavClass("/clients/new")">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
            </svg>
            <span>Add Client</span>
        </NavLink>

        <NavLink href="/providers" class="@GetNavClass("/providers")">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
            <span>Providers</span>
        </NavLink>

        <NavLink href="/tasks" class="@GetNavClass("/tasks")">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
            </svg>
            <span>Tasks</span>
        </NavLink>

        @if (CurrentUser?.CanManageUsers == true)
        {
            <NavLink href="/tags" class="@GetNavClass("/tags")">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                </svg>
                <span>Manage Tags</span>
            </NavLink>

            <NavLink href="/forms" class="@GetNavClass("/forms")">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                <span>Form Builder</span>
            </NavLink>
        }
    </nav>

    <div class="p-4 border-t border-gray-200">
        <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-full bg-teal-100 flex items-center justify-center text-teal-700 font-semibold">
                @(CurrentUser?.Avatar ?? "??")
            </div>
            <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-gray-900 truncate">@(CurrentUser?.Name ?? "Select User")</p>
                <p class="text-xs text-gray-500 truncate">@(CurrentUser?.Role ?? "")</p>
            </div>
            <div class="relative">
                <select class="text-xs bg-gray-100 border-0 rounded px-2 py-1 cursor-pointer"
                        @onchange="OnUserSelected">
                    @foreach (var user in Users)
                    {
                        <option value="@user.Id" selected="@(user.Id == CurrentUser?.Id)">@user.Name</option>
                    }
                </select>
            </div>
        </div>
    </div>
</aside>

@code {
    [Parameter]
    public User? CurrentUser { get; set; }

    [Parameter]
    public List<User> Users { get; set; } = new();

    [Parameter]
    public EventCallback<User> OnUserChange { get; set; }

    private string GetNavClass(string href)
    {
        var currentPath = new Uri(Navigation.Uri).AbsolutePath;
        var isActive = href == "/" ? currentPath == "/" : currentPath.StartsWith(href);
        
        var baseClass = "flex items-center gap-3 px-3 py-2 rounded-lg text-sm font-medium transition-colors ";
        return baseClass + (isActive 
            ? "bg-teal-50 text-teal-700" 
            : "text-gray-600 hover:bg-gray-100 hover:text-gray-900");
    }

    private async Task OnUserSelected(ChangeEventArgs e)
    {
        var userId = e.Value?.ToString();
        var user = Users.FirstOrDefault(u => u.Id == userId);
        if (user != null)
        {
            await OnUserChange.InvokeAsync(user);
        }
    }
}
