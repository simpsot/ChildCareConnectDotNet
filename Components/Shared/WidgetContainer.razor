@using ChildCareConnect.Models
@using ChildCareConnect.Services

<div class="@GetWidgetContainerClass()" draggable="@(IsEditMode.ToString().ToLower())" @ondragstart="HandleDragStart" @ondragover:preventDefault @ondrop="HandleDrop">
    @if (IsEditMode)
    {
        <div class="absolute top-2 right-2 flex gap-1 z-10">
            <button @onclick="ToggleVisibility" class="p-1.5 rounded-lg bg-white shadow-sm border border-gray-200 hover:bg-gray-50" title="@(Widget.Visible ? "Hide widget" : "Show widget")">
                @if (Widget.Visible)
                {
                    <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                    </svg>
                }
                else
                {
                    <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.542-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.542 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
                    </svg>
                }
            </button>
            <div class="p-1.5 rounded-lg bg-white shadow-sm border border-gray-200 cursor-move" title="Drag to reorder">
                <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8h16M4 16h16" />
                </svg>
            </div>
        </div>
    }
    
    <div class="@GetContentClass()">
        @ChildContent
    </div>
</div>

@code {
    [Parameter]
    public ChildCareConnect.Models.DashboardWidget Widget { get; set; } = new();

    [Parameter]
    public bool IsEditMode { get; set; } = false;

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public EventCallback<ChildCareConnect.Models.DashboardWidget> OnVisibilityToggle { get; set; }

    [Parameter]
    public EventCallback<(string SourceId, string TargetId)> OnReorder { get; set; }

    private string GetWidgetContainerClass()
    {
        var baseClass = "relative bg-white rounded-xl shadow-sm border transition-all duration-200 ";
        
        if (IsEditMode)
        {
            baseClass += "border-dashed border-2 border-teal-300 cursor-move hover:border-teal-500 ";
        }
        else
        {
            baseClass += "border-gray-200 ";
        }

        if (!Widget.Visible && IsEditMode)
        {
            baseClass += "opacity-50 ";
        }

        return baseClass;
    }

    private string GetContentClass()
    {
        return Widget.Visible || IsEditMode ? "p-6" : "hidden";
    }

    private void HandleDragStart(DragEventArgs e)
    {
        // Store widget ID for drag operation
    }

    private async Task HandleDrop(DragEventArgs e)
    {
        // Handle drop for reordering
    }

    private async Task ToggleVisibility()
    {
        Widget.Visible = !Widget.Visible;
        await OnVisibilityToggle.InvokeAsync(Widget);
    }
}
